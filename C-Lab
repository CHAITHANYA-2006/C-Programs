POINTER ARITHMETRIC

POINTER INCREMENT

#include<stdio.h>
int main(){
    int n, *pn, *pn1;
    pn = &n;
    pn1 = pn + 1;
    printf("%d %d\n", pn, pn1);
    double d, *pd, *pd1;
    pd = &d;
    pd1 = pd + 1;
    printf("%d %d\n", pd, pd1);
}

