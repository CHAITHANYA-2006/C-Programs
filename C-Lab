==============================================================================================================================
UNCONDITIONAL

#include <stdio.h>

int main() {
    int a = 5;

    while (a <= 10){
        printf("%d\n", a);
        a++;

        if (a == 9){
            break;
        }
    }
}

----------------------------------------------------------------------------

#include <stdio.h>

int main() {
    int a = 5;

    while (a <= 10){

        if (a == 6){
            a++;
            continue;
        }

        printf("%d\n", a);
        a++;
    }
}

----------------------------------------------------------------------------

#include <stdio.h>

int main() {
    int a = 1;

    repeat:
            printf("%d\n", a);
            a++;

    if (a <= 10){

        goto repeat;

    }
}

